    <h3 class="text text-primary text-center">Lista de reservas a facturar</h3>
<div class="container py-4">
<table id="listar-factura" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>
            <th>Nombre del equipo</th>
            <th>Marca</th>
            <th>Problema</th>
            <th>Usuario</th>
            <th>Cedula</th>
            <th>Reserva</th>
            <th>Opciones</th>
        </tr>
    </thead>
    <tbody>
        {{#each reservas}}
        <tr>
            <td>{{Nombre_equipo}}</td>
            <td>{{Marca_equipo}}</td>
            <td>{{Descripcion_Problema}}</td>
            <td>{{Nombre}}</td>
            <td>{{Cedula}}</td>
            <td>{{Reserva_Dia}}</td>
            <td><a href="/facturacion/nueva-facturacion/{{_id}}"><i class="fas fa-2x fa-piggy-bank" style="color:black" title="Facturar"></i></a>
            {{#ifEquals this.Generado "Verdadero"}}
            <i class="fas fa-2x fa-check-circle" style="color:green" title="Facturado"></i>
            {{/ifEquals}}
            </td>
        </tr>
        {{else}}
        <tr>
            <td>
                <h3>No hay ninguna reserva aun</h3>
            </td>
        </tr>
        {{/each}}
    </tbody>
    <tfoot>
        <tr>
            <th>Marca</th>
            <th>Nombre del Equipo</th>
            <th>Usuario</th>
            <th>Cedula</th>
            <th>Reserva</th>
            <th>Opciones</th>
        </tr>
    </tfoot>
</table>
</div>