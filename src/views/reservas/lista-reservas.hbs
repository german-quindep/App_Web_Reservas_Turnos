<div class="container py-4">
<div class="row">
    <!---HAGO LA CONDICION Y PREGUNTO SI TIENE ALGO RESERVA QUE MUESTRE-->
{{#each reservas}}
    <div class="col-md-3">
        <div class="card">
          <h4 class="card-tittle d-flex justify-content-between align-items-center">{{Nombre_equipo}}
              <a href="/reservas/editar/{{_id}}"><i class="fas fa-edit"></i></a> 
              </h4>                
            <div class="card-body">
                <h5>Marca:</h5>{{Marca_equipo}}  
                <h5>Marca:</h5>{{Descripcion_Problema}}
            </div>
            <div class="card-footer">
                <p><b>Fecha:</b> {{Reserva_Dia}}</p>
                <!--DENTRO DE UN FORMULARIO HAGO EL BOTON ELIMINAR PARA PODER USAR EL METHOD DELETE--->
                <form action="/reservas/eliminar-reservas/{{_id}}?_method=DELETE" method="POST">
               <input type="hidden" name="_method" value="DELETE">
                <button class="btn btn-danger btn-block btn-sm" type="submit">
                    Eliminar
                </button>
                </form>
                {{#ifEquals Generado "Verdadero"}}
                <a href="/facturacion/ver-facturas/{{_id}}" class="btn btn-success btn-block btn-sm" title="Ver factura">
                 Ver factura</a>
                 {{/ifEquals}}
            </div>
        </div>
    </div>
    <!--CASO CONTRARIO QUE NO MUESTRE NINGUNA TARJETA-->
    {{else}}
    <div class="card mx-auto">
        <div class="card-body">
            <p class="lead">No tiene ninguna reserva aun</p>
            <a href="/reservas/agregar-reserva" class="btn btn-success btn-block">Agregar Reserva</a>
        </div>
    </div>
    <!--FIND EL EACH-->
{{/each}}
</div>
</div>